<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.monteoliva.desafioandroidclaudiomonteoliva">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DesafioApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Challenge"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity
            android:name=".ui.feature.splash.SplashActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.feature.main.MainActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.feature.detail.DetailActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.feature.hq.HqActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>